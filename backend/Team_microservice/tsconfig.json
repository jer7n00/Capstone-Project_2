{
  "compilerOptions": {
    "types": ["node"],
    "module": "commonjs",
    "target": "es2016",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],  // Include all TypeScript files in src
  "exclude": ["node_modules"]  // Exclude node_modules
}
